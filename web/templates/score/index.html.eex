<h2>Listing scores</h2>

<table class="table">
  <thead>
    <tr>
      <th>Talent</th>
      <th>Job</th>
      <th>Score</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for score <- @scores do %>
    <tr>
      <td><%= score.talent_id %></td>
      <td><%= score.job_id %></td>
      <td><%= score.score %></td>

      <td class="text-right">
        <%= link "Show", to: score_path(@conn, :show, score), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: score_path(@conn, :edit, score), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: score_path(@conn, :delete, score), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New score", to: score_path(@conn, :new) %>
